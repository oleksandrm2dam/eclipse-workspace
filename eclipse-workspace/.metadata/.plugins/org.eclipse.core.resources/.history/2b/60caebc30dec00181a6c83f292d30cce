package notaMedia;

import java.io.File;

public class LanzadorProcesos {

	public static final String[] CICLOS = {"SMR1", "SMR2", "DAM1", "DAM2"};	
	
	public static void main(String[] args) {
		LanzadorProcesos lp = new LanzadorProcesos();
		for(String sufijo : CICLOS) {
			String rutaFicheroLeer = "notas" + sufijo + ".txt"; // notasSMR1.txt
			String rutaFicheroResultado = "notaMedia" + sufijo + ".txt"; //notaMediaSMR1.txt
			
			
			
		}
		
	}
	
	public void lanzarContador(String rutaFicheroLeer, String rutaFicheroResultado) {
		String claseContador = "notaMedia.ContadorNotas";
		ProcessBuilder pb;
		
		try {
			pb = new ProcessBuilder(
				"java",
				claseContador,
				rutaFicheroLeer
			);
			
			File dirVocales = new File("G:\\eclipse-workspace\\Servicios y procesos\\bin");
			pb.directory(dirVocales);
			pb.redirectError(new File("notaMediaErrores.txt"));
			pb.redirectOutput(new File(fichResultado));
			
			pb.start();
			
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
